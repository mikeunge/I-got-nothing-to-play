<div class="flex flex-row justify-between border-b-2 pb-4 py-2 px-4">
	<a href="{{ path('homepage') }}">
		<img src="{{ asset('/images/logo.png') }}" alt="LOGO" class="h-8 w-auto mr-2">
	</a>
	<div class="text-4xl">Available {{ component_title }}</div>
	<div class="flex">
		<a class="btn" href="new">Add new</a>
		<div class="px-2"></div>
		<a class="btn" href="{{ path('games_index') }}">Take me back</a>
	</div>
</div>

<div class="flex flex-col pt-4">
	<div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
		<div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
		<div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
			<table class="min-w-full divide-y divide-gray-200">
				<thead class="bg-gray-50">
					<tr>
						<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Id</th>
						<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
						<th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
					</tr>
				</thead>
				<tbody class="bg-white divide-y divide-gray-200">
					{% for comp in components %}
						<tr>
							<td class="px-6 py-4 whitespace-nowrap">
								<div class="flex items-center">
									<div class="ml-4">
										{{ comp.id }}
									</div>
								</div>
							</td>
							<td class="px-6 py-4 whitespace-nowrap">
								{{ comp.name }}
							</td>
							<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
								<a class="link" href="{{ path('genres_edit', {'id': comp.id}) }}">Edit</a>
								<a class="link ml-3" href="{{ path('genres_show', {'id': comp.id}) }}">Details</a>
							</td>
						</tr>
					{% else %}
						<div class="flex flex-col text-center justify-center pt-28 md:pt-48">
							<div class="text-2xl md:text-4xl">(つ◉益◉)つ</div>
							<div class="text-3xl md:text-5xl pt-8">No records found</div>
							<div class="md:text-2xl pt-2 font-light text-gray-600">Add some genre and then come back, it looks great, trust me.</div>
						</div>
					{% endfor %}
				</tbody>
			</table>
		</div>
		</div>
	</div>
</div>