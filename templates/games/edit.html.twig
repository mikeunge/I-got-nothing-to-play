{% extends 'base.html.twig' %}

{% block title %}Edit: {{ game.title }} | IGN2P{% endblock %}
{% set delete_is_button = true %}

{% block body %}
	<div class="flex flex-row justify-between border-b-2 pb-4 py-2 px-4">
		<a href="{{ path('homepage') }}">
			<img src="{{ asset('/images/logo.png') }}" alt="LOGO" class="h-8 w-auto mr-2">
		</a>
		<div class="flex">
			<div class="pr-2">
				{{ include('games/_delete_form.html.twig') }}
			</div>
			<a class="btn" href="{{ path('games_index') }}">Take me back</a>
		</div>
	</div>
	<div class="flex justify-center">
		<div class="w-full max-w-4xl text-start">
			{{ include('games/_form.html.twig', {'button_label': 'Update'}) }}
		</div>
	</div>
{% endblock %}
